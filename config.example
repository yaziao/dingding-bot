# 彩玉天气API配置
CAIYUN_API_KEY=CAIYUN_API_KEY
# 获取API KEY: https://dashboard.caiyunapp.com/

# 位置信息 (经度,纬度)
LONGITUDE=116.4074
LATITUDE=39.9042

# 钉钉机器人Webhook配置
DINGTALK_WEBHOOK=url
# 钉钉机器人密钥 (如果启用了加签)
DINGTALK_SECRET=

# 城市名称 (用于显示)
CITY_NAME=北京

# 定时任务配置 (cron格式: 分 时 日 月 周)
# 天气播报任务 - 每小时执行
WEATHER_TASK_CRON=0 * * * *
WEATHER_TASK_ENABLED=true

# 热搜榜单任务 - 每2小时执行
HOTSEARCH_TASK_CRON=0 */2 * * *
HOTSEARCH_TASK_ENABLED=true
HOTSEARCH_TASK_SOURCE=weibo

# 可以添加更多热搜源任务
# HOTSEARCH_ZHIHU_CRON=0 8,12,18 * * *
# HOTSEARCH_ZHIHU_ENABLED=false
# HOTSEARCH_ZHIHU_SOURCE=zhihu
